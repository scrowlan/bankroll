<div class="row">
	<div class="span2">
		<% if current_user.rolls.any? %>
		<h3>Current Bankrolls:</h3>
		<ol class="rolls amount">
			<table>
				<tbody>
					<tr>
				<% current_user.rolls.each do |roll| %>
				<tr><td colspan="2" class="left"><%= roll.site_name.capitalize %></td></tr>
				<% @id = roll.id%>
				<% if roll.games.any? %>
						<td><%= number_to_currency(roll.updated_bankroll(@id)) %></td>
						<td><%= number_to_currency(roll.hourly_rate) %>
						<td><%= link_to "Delete", roll, :method => :delete %></td>
				<% else %>
				<td><%= number_to_currency(roll.amount) %></td>
				<td>No Games</td>
				<td><%= link_to "Delete", roll, :method => :delete %></td>
				<% end %>
					</tr>
				<% end %>
				</tbody>
			</table>
		</ol>
		<% end %> 
	</div>
</div>